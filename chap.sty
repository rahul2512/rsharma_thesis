\def\@makechapterhead#1{%
     {\parindent \z@ \raggedright \normalfont
       \ifnum \c@secnumdepth >\m@ne
       \begin{center}
         \uppercase{\bfseries \@chapapp\space \thechapter} 
       \end{center}
       \par\nobreak	
       \vskip 10\p@
       \fi
       \interlinepenalty\@M
       \bf
       \begin{center}
         #1\par %\nobreak
       	\end{center}
       \vskip 10\p@
       %\thispagestyle{empty}
     }}

   % Makes the chapter heading for \chapter* commands
   \def\@makeschapterhead#1{%
     \vspace*{10\p@}%
     {\parindent \z@ \raggedright
       \normalfont 
       \interlinepenalty\@M
       \Large \bfseries #1\par\nobreak
      \vskip 10\p@
       %\thispagestyle{empty}
     }}
     
